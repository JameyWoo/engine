                                                                                                                                                         P1181 数列分段Section I  .  是真的水题    #include &lt;iostream&gt; using namespace std;  int main() {     int n, m, cnt = 1;     cin &gt;&gt; n &gt;&gt; m;     int *a = new int [n+1], *b = new int [n+1];     b[0] = 0;     for(int i = 1; i &lt;= n; ++i) {         b[i] = 0;         cin &gt;&gt; a[i];         b[i] = b[i-1] + a[i];         if(b[i] &gt; m) {             b[i] = a[i];             cnt++;         }     }      cout &lt;&lt; cnt; } /* 5 6 4 2 4 5 1 */  混喝牛奶  .    #include &lt;iostream&gt; #include &lt;algorithm&gt; using namespace std; int *a;  bool cmp(int x, int y) {     return a[x] &lt; a[y]; }  int main() {     int m, n;     int *b = new int [n], *c = new int [n];     a = new int [n];     cin &gt;&gt; m &gt;&gt; n;     for(int i = 0; i &lt; n; ++i) {         cin &gt;&gt; a[c[i] = i] &gt;&gt; b[i];     }     sort(c, c+n, cmp);     int mon = 0;     for(int i = 0; m &gt; 0; ++i) {         if(m &gt;= b[c[i]]) {             mon += a[c[i]] * b[c[i]];             m -= b[c[i]];         } else {             mon += a[c[i]] * m;             m = 0;         }     }     cout &lt;&lt; mon; }                                            