                                                                                                                                                         排队接水  .    #include &lt;iostream&gt; #include &lt;cstdio&gt; #include &lt;algorithm&gt; using namespace std; int *a;  bool cmp(int x, int y) {     return a[x] &lt; a[y]; }  int main() {     int n;     double ans = 0;     cin &gt;&gt; n;     int *b = new int [n+1];     a = new int [n+1];     for(int i = 1; i &lt;= n; ++i) {         cin &gt;&gt; a[b[i] = i];     }     sort(b+1, b+n+1, cmp);     for(int i = 1; i &lt;= n; ++i) {         cout &lt;&lt; b[i] &lt;&lt; ' ';         ans += a[b[i]]*(n - i);     }     cout &lt;&lt; endl;     printf("%.2f", ans/n); }  纪念品分组  .    #include &lt;iostream&gt; #include &lt;algorithm&gt; using namespace std;  int main() {     int w, n;     cin &gt;&gt; w &gt;&gt; n;     int *a = new int [n];     for(int i = 0; i &lt; n; ++i) {         cin &gt;&gt; a[i];     }     sort(a, a + n);     int top = 0, tail = n - 1, ans = 0;     while(top &lt;= tail) {         while(a[top] + a[tail] &gt; w) {             ans++;             tail--;         }         ans++, top++, tail--;     }     cout &lt;&lt; ans; }                                            