                                                                                                                                                         CCF 201512-3 画图 传送门  模拟, 还带了个BFS, 比较简单. 但是第一次提交只得了90分. 因为在判断交点的时候, 考虑了 -遇到| 和 |遇到- 的情况却没考虑|和-遇到+的情况, 真是蠢哉, 蠢哉.  #include &lt;algorithm&gt; #include &lt;iostream&gt; #include &lt;vector&gt; #include &lt;queue&gt; using namespace std;  int move[4][2] = {{-1, 0}, {1, 0}, {0, -1}, {0, 1}}; int n, m, q, cmd;  void bfs(char map[100][100], int x, int y, char ch) {     int vis[100][100] = {};     queue&lt;int&gt; Qx, Qy;     Qx.push(x), Qy.push(y);     vis[x][y] = true;     map[x][y] = ch;     while (!Qx.empty()) {         int u = Qx.front(), v = Qy.front();         Qx.pop(), Qy.pop();         for (int i = 0; i &lt; 4; ++i) {             int uu = u + move[i][0], vv = v + move[i][1];             if (uu &lt; 0 || uu &gt;= n || vv &lt; 0 || vv &gt;= m) continue;             if (map[uu][vv] == '-' || map[uu][vv] == '+' || map[uu][vv] == '|') continue;             if (vis[uu][vv]) continue;             vis[uu][vv] = true;             Qx.push(uu), Qy.push(vv);             map[uu][vv] = ch;         }     } }  int main() {     char map[100][100];     for (int i = 0; i &lt; 100; ++i) {         for (int j = 0; j &lt; 100; ++j) {             map[i][j] = '.';         }     }     cin &gt;&gt; n &gt;&gt; m &gt;&gt; q;     for (int qu = 0; qu &lt; q; ++qu) {         cin &gt;&gt; cmd;         if (cmd == 1) {             int x, y;             char c;             cin &gt;&gt; x &gt;&gt; y &gt;&gt; c;             bfs(map, x, y, c);         } else if (cmd == 0) {             int x1, y1, x2, y2;             cin &gt;&gt; x1 &gt;&gt; y1 &gt;&gt; x2 &gt;&gt; y2;             if (y1 == y2) { // 横线, 用'-'表示                 for (int i = min(x1, x2); i &lt;= max(x1, x2); ++i) {                     if (map[i][y1] == '|') map[i][y1] = '+';                     else if (map[i][y1] == '+') continue; //靠, 漏掉了这个,10分.                     else map[i][y1] = '-';                 }             } else { // 竖线, 用'|'表示                 for (int i = min(y1, y2); i &lt;= max(y1, y2); ++i) {                     if (map[x1][i] == '-') map[x1][i] = '+';                     else if (map[x1][i] == '+') continue;                     else map[x1][i] = '|';                 }             }         }     }     for (int i = m - 1; i &gt;= 0; --i) {         for (int j = 0; j &lt; n; ++j) {             cout &lt;&lt; map[j][i];         }         cout &lt;&lt; endl;     } }                                            